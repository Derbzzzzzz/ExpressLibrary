extends layout

block content
  h1 #{title}: #{genre.name}

  if genre_books.length > 0

    div #[strong Delete the following books before attempting to delete this genre.]

    div(style='margin-top:20px')

      h4 Books

      dl
        each book in genre_books
          div.card.bg-dark
            div.card-body
              a(href=book.url)
                h5.card-title #{book.title}
              h6.card-subtitle
                span #{book.summary}
  
        else
          p This genre has no books

  else
    p Do you really want to delete this Genre?

    form(method='POST' action='')
      div.form-group
        input#genreid.form-control(type='hidden',name='genreid', required='true', value=genre._id )

      button.btn.btn-primary(type='submit') Delete